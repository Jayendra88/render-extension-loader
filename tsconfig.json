{
  "compilerOptions": {
    "types": [
      "node",
      "bluebird",
      "bluebird-global"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "DOM"
    ],
    "outDir": "lib",
    "allowJs": false,
    "sourceMap": false,
    "target": "es2015",
    "module": "none",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["node_modules/@types"]
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": [
    "./src/**/*",
    "./typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
